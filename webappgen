if [[ $# == 1 ]]; then
    prodDir=$1

    if [ -d "$prodDir" ]; then
        echo "Directory already exists!"
        exit
    fi

    if hash sass 2>/dev/null; then
        if hash compass 2>/dev/null; then
            if hash npm 2>/dev/null; then
                if hash grunt 2>/dev/null; then
                    if hash ender 2>/dev/null; then
                        randName=$RANDOM

                        echo "Getting the zip file..."
                        wget https://github.com/tommica/webapptemplate/archive/master.zip -O "$randName.zip" -q

                        echo "Generating folders..."
                        unzip -qq "$randName.zip"
                        rm "$randName.zip"
                        mv webapptemplate-master $prodDir
                        cd $prodDir

                        echo "Installing NPM packages..."
                        npm install > /dev/null 2>&1

                        echo "Building ENDERJS..."
                        ender build jeesh --output scripts/vendor/ender > /dev/null 2>&1

                        echo "Initializing..."
                        grunt init > /dev/null 2>&1
                    else
                        echo "Please install ENDER!"
                        exit
                    fi
                else
                    echo "Please install GRUNT!"
                    exit
                fi
            else
                echo "Please install NODE and NPM!"
                exit
            fi
        else 
            echo "Please install COMPASS!"
            exit
        fi
    else
        echo "Please install SASS!"
        exit
    fi

    echo "Finished!"
fi
